<div class="container-fluid index-banner">
  <div class="col-md-3 left-col-logo">
    <%= image_tag("universitycrimewatchlogo.png", :alt => "university crime watch logo", :class => "logo") %>
  </div>

  <div class="col-md-9 banner-right-content">
    <div class="banner-container">
      <div class="row">
        <h1 class="headline-white">University Crime Watch</h1>
        <p class="banner-small-caption">Informing the public about crimes committed on higher-education campuses across the United States. </p>
      </div>
      <div class="row">
        <div class="col-md-3 banner-stats">
          <h1 class="auto-odo">2860</h1>
          <p class="stats-small-caption">auto vehicle thefts</p>
        </div>
        <div class="col-md-3 banner-stats">
          <h1 class="assaults-odo">1673</h1>
          <p class="stats-small-caption">aggravated assaults</p>
        </div>
        <div class="col-md-3 banner-stats">
          <h1 class="forcible-odo">4821</h1>
          <p class="stats-small-caption">forcible sex offenses</p>
        </div>
        <div class="col-md-3 banner-stats">
          <h1 class="robbery-odo">1342</h1>
          <p class="stats-small-caption">robberies</p>
        </div>
      </div>
      <div class="row banner-index-search">
        <div class="search-bar col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2 col-s-12 col-xs-12">
          <%= form_for "school", url: search_schools_path, :html => {class: 'cont'}, action: "search_school" do |f| %>
          <div class="search-row">
            <%= f.text_field :name, placeholder: "Search for a school", class: 'search-bar srchFld' %>
            <div class="entypo-search ico"></div>
          </div>
          <%= f.submit "Search", :class => 'srchBtn' %>
          <% end %>
          <% if flash[:errors] %>
          <p class="error-message"><%= flash[:errors] %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>

