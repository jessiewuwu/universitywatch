
<div class="container">

  <div class="banner-panel row">
    <div class="col-lg-2 col-md-2 col-s-12 col-xs-12  circle acronym-section">
      <div class="rotating-circle">
      <h3><%= @school.acronym %></h3>
      </div>
    </div>
    <div class="col-lg-6 col-md-6 col-xs-12 col-s-12">
      <h2 class="section-header-spacing"><%= @school.name %></h2>
      <div class="col-lg-6 col-md-6">
        <p class="profile-title">Location</p>
        <p class="profile-detail"><%= @school.city %>, <%= @school.state %></p>
        <br>
        <p class="profile-title">School Population</p>
        <p class="profile-detail"><%= @school.population %></p>
      </div>
      <div class="col-lg-6 col-md-6">
        <p class="profile-title">Type</p>
        <p class="profile-detail"><%= @school.school_type %></p><br>

        <p class="profile-title">Tweet This Page</p>
        <p>
          <a href="https://twitter.com/share" class="twitter-share-button" data-text="Check out this school on University Crime Watch -" data-count="none">Tweet</a>
        </p>
      </div>
    </div>


    <div class="col-lg-4 col-md-4 col-s-12 col-xs-12 crime-badges">
      <div class="row">
        <h3 class="section-header-spacing">Total Crimes per Year</h3>
      </div>
      <div class="row">
        <div class="col-md-6 col-md-offset-3 badge-13"><span class="crime-total-number"><%= get_status(@school, 2013) %></span></div>
      </div>
      <div class="row">
        <div class="col-md-3 col-md-offset-3 badge-11"><span class="crime-total-number"><%= get_status(@school, 2011)%></span></div>
