<div class="container-fluid page-width">
  <div class="row">
    <h1 class="crime-title page-header">I'm the burlgary template</h1>
  </div>

  <div id="chart">
  </div>
</div>
<script>
  var chart = c3.generate({
      bindto: '#chart',
      data: {
        columns: [
          ['2013', <%= @top_burglary_stats %>]
        ],
        types: {
                2013: 'bar'
              },
        colors: {
                    2011: '#003058',
                    2012: '#00DDD8',
                    2013: '#517398'
                }
      },
      axis: {
              x: {
                  type: 'category',
                  categories:
                  ['<%= @top_burglary_schools[0] %>',
                   '<%= @top_burglary_schools[1] %>',
                   '<%= @top_burglary_schools[2] %>',
                   '<%= @top_burglary_schools[3] %>',
                   '<%= @top_burglary_schools[4] %>',
                   '<%= @top_burglary_schools[5] %>',
                   '<%= @top_burglary_schools[6] %>',
                   '<%= @top_burglary_schools[7] %>',
                   '<%= @top_burglary_schools[8] %>',
                   '<%= @top_burglary_schools[9] %>',]}
            },
  });

</script>

