<h1 class="crime-title">Top 10: Schools with Most Aggravated Assaults</h1>


  <div id="chart">
 </div>
<script>
  var chart = c3.generate({
      bindto: '#chart',
      data: {
        columns: [
          ['2013', <%= @top_ag_assault_stats %>]
        ],
        types: {
                2013: 'bar'
              },
        colors: {
                    2011: '#003058',
                    2012: '#00DDD8',
                    2013: '#517398'
                }
      },
      axis: {
              x: {
                  type: 'category',
                  categories:
                  ["<%= @top_ag_assault_schools[0].html_safe %>", "<%= @top_ag_assault_schools[1].html_safe %>", "<%= @top_ag_assault_schools[2].html_safe %>", "<%= @top_ag_assault_schools[3].html_safe %>", "<%= @top_ag_assault_schools[4].html_safe %>", "<%= @top_ag_assault_schools[5].html_safe %>", "<%= @top_ag_assault_schools[6].html_safe %>", "<%= @top_ag_assault_schools[7].html_safe %>", "<%= @top_ag_assault_schools[8].html_safe %>", "<%= @top_ag_assault_schools[9].html_safe %>"]}
            },
  });

  $('.c3-event-rect').click(function() {
    var school_index = parseInt($(this).attr("class").split(" ")[2].split("")[14]);
    var school_id = <%=@top_school_ids%>[school_index]
    window.location.href = "/schools/" + school_id;
  });

</script>
